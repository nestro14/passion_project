<h1 class="text-center paytone">Top 10 Players Rank by Team</h1>

<div class="card text-center">
  <div class="card-header flex">
    <a class="nav-link" href="/">Home</a>
    <a class="nav-link" href="/players">Players</a>
  </div>
</div>


<div class="flex">
<% @teams.each do |team| %>
  <div class="card space" style="width: 15rem;">
    <img class="card-img-top resize" src="/images/teams/<%= team.code %>.gif" alt="team Photo Here">
    <div class="card-body">
      <h4 class="card-title"><%= team.full_name %></h4>
      <a href="/teams/<%= team.id %>" class="btn btn-primary">View team's top 10</a>
    </div>
  </div>

<% end %>
</div>
